<div class="content">
  <br>
  <h1>ResearchGate Login</h1>
  <form method="post" action="/login">
    <paper-input-decorator label="Username" floatingLabel>
      <input type="text" name="username">
    </paper-input-decorator>
    <paper-input-decorator label="Password" floatingLabel>
      <input type="password" name="password">
    </paper-input-decorator>
    <br>
    <button class="green" type="submit" value="Login" is="paper-button-submit">Login</button>
  </form>
</div>

<polymer-element name="paper-button-submit" extends="button" noscript>
<template>
<style>
:host {
  border: 0;
  background: transparent;
  padding: 0;
  font-size: inherit;
}

:host paper-button {
  background-color: #4caf50;
  color: #e8f5e9;
}
</style>
<paper-button noink raised>
<content></content>
</paper-button>
</template>
</polymer-element>
