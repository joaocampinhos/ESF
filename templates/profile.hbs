{{#if profile}}
<div class="container">
  <div class="row">
    <div class="red col-md-4" style="text-align: center;">
      <img style="max-width:300px;height:auto;width:100%;" src="http://placehold.it/300.png&text=Avatar">
      {{#if diff}}
      <a href="/messages/{{{profile.username}}}" class="btn btn-block btn-success btn-raised">Send  Mensage</a>
      {{/if}}
    </div>
    <div class="blue col-md-8">
      <h1>{{profile.name}} <small>{{profile.username}}</small></h1>
      <br>
      <p><strong>Email: </strong>{{profile.email}}</p>
      <p><strong>Position: </strong>{{profile.position}}</p>
      <p><strong>Degree: </strong>{{profile.degree}}</p>
      {{#if publications}}
      <hr>
      <h2>Publications</h2>
      <div class="list-group">
        {{#each publications}}
        <div class="list-group-item">
          <a class="success" href="/publication/{{{this._id}}}">
            <div class="row-content">
              <h4 class="list-group-item-heading">{{{this.title}}}</h4>
              <p class="list-group-item-text">Author(s): {{{this.author.username}}}</p>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </div>
</div>
{{else}}
<h1>Profile not found</h1>
{{/if}}

