<div class="content">
  <br>
  <h1>ResearchGate Signup</h1>
  <form method="post" action="/signup">
    <paper-input-decorator label="Username" floatingLabel>
      <input type="text" name="username">
    </paper-input-decorator>
    <paper-input-decorator label="Name" floatingLabel>
      <input type="text" name="name">
    </paper-input-decorator>
    <paper-input-decorator label="Email" floatingLabel>
      <input type="text" name="email">
    </paper-input-decorator>
    <paper-input-decorator label="Password" floatingLabel>
      <input type="password" name="password">
    </paper-input-decorator>
  <button class="green" type="submit" value="Signup" is="paper-button-submit">Signup</button>
  </form>
</div>



<polymer-element name="paper-button-submit" extends="button" noscript>
<template>
<style>
:host {
  border: 0;
  background: transparent;
  padding: 0;
  font-size: inherit;
}

:host paper-button {
  background-color: #4caf50;
  color: #e8f5e9;
}
</style>
<paper-button noink raised>
<content></content>
</paper-button>
</template>
</polymer-element>
